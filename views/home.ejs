<!doctype html>
<html>
<head>
  <%- include('./partials/head') %>
  <title>Home Page</title>
</head>
<body class="bg-gray-500">
 <%- include('./partials/nav') %>
<!-- <%= JSON.stringify(blogs)%> -->

 <!-- <div class="container mt-8 mx-8 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6 mr"> -->
   <div class="mt-8 px-8 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">

            <% blogs.forEach(blog => {  %>
            
            <div class="max-w-sm bg-white border border-gray-200 rounded-lg shadow-sm dark:bg-gray-800 dark:border-gray-700">
                <img class="rounded-t-lg w-full h-48 object-cover" src="<%= blog.coverImageURL %>" alt="" />
                <div class="p-5">
                    <a href="#">
                        <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">
                            <%= blog.title %>
                        </h5>
                    </a>
                    <a href="/blog/<%= blog._id %>" class="inline-block mt-4 px-6 py-2 text-sm font-medium text-white bg-blue-600 rounded-lg hover:bg-blue-700">
                        View
                    </a>
                </div>
            </div>
            
            <%})%>
        </div>

<%- include('./partials/scripts') %>

 
</body>
</html>